# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=edot_ops_control_center
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Jira Integration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=INFRA

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_COST_EXPLORER_ENABLED=true

# Scheduler Configuration
SYNC_INTERVAL_CRON=0 */6 * * *
REPORT_GENERATION_CRON=0 8 * * MON

# Report Configuration
REPORT_OUTPUT_DIR=./reports

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:5173

# SOP Knowledge Base (Outline integration - optional)
SOP_KB_URL=https://your-outline-instance.com
SOP_KB_API_TOKEN=your_outline_api_token
