# =============================================================================
# EDOT OPS CONTROL CENTER - FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure for your environment
# Production values should be set in deployment configuration

# =============================================================================
# API Configuration
# =============================================================================
# Backend API base URL
# Development: http://localhost:3000
# Production: https://api.ops.yourdomain.com
VITE_API_URL=http://localhost:3000

# =============================================================================
# WebSocket Configuration
# =============================================================================
# WebSocket server URL for real-time updates
# Development: ws://localhost:3000
# Production: wss://api.ops.yourdomain.com
VITE_WS_URL=ws://localhost:3000

# =============================================================================
# Application Configuration
# =============================================================================
# Application mode: development | staging | production
VITE_APP_MODE=development

# Enable mock data mode (use mock API instead of real backend)
# Set to 'false' once backend is connected
VITE_MOCK_API=false

# =============================================================================
# Feature Flags - Advanced Features
# =============================================================================
# Enable AI-powered cost forecasting with anomaly detection
VITE_FEATURE_AI_FORECAST=true

# Enable automated report scheduling
VITE_FEATURE_REPORT_SCHEDULING=true

# Enable Grafana dashboard integration
VITE_FEATURE_GRAFANA=true

# Enable global search with command palette (âŒ˜K)
VITE_FEATURE_GLOBAL_SEARCH=true

# Enable environment comparison
VITE_FEATURE_ENV_COMPARISON=true

# Enable team collaboration (comments, @mentions)
VITE_FEATURE_COLLABORATION=true

# Enable custom dashboard builder
VITE_FEATURE_CUSTOM_DASHBOARDS=true

# Enable saved filter views
VITE_FEATURE_SAVED_FILTERS=true

# =============================================================================
# Feature Flags - Core Features
# =============================================================================
# Enable role-based access control
VITE_FEATURE_RBAC=true

# Enable audit logs
VITE_FEATURE_AUDIT_LOGS=true

# Enable AIOps features
VITE_FEATURE_AIOPS=true

# =============================================================================
# External Services Integration
# =============================================================================
# Grafana URL for dashboard embedding
# Must be accessible from user's browser
# Example: https://grafana.yourdomain.com
VITE_GRAFANA_URL=http://localhost:3001

# Jira URL for ticket linking (optional)
# Example: https://your-company.atlassian.net
VITE_JIRA_URL=https://your-company.atlassian.net

# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================
# Google Analytics tracking ID
# Leave empty to disable analytics
VITE_GA_ID=

# Sentry DSN for error tracking
# Leave empty to disable error tracking
VITE_SENTRY_DSN=

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug mode (verbose logging)
VITE_DEBUG_MODE=false

# Show rate limit warnings in UI
VITE_SHOW_RATE_LIMIT_WARNINGS=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# PRODUCTION CONFIGURATION EXAMPLE
# =============================================================================
# VITE_API_URL=https://api.ops.yourdomain.com
# VITE_WS_URL=wss://api.ops.yourdomain.com
# VITE_APP_MODE=production
# VITE_MOCK_API=false
# VITE_GRAFANA_URL=https://grafana.yourdomain.com
# VITE_DEBUG_MODE=false
# VITE_ENABLE_PERFORMANCE_MONITORING=true
